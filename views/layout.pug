doctype html
html
  head
    title #{title}
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/navbar.css')
    link(rel='stylesheet', href='https://use.fontawesome.com/releases/v5.7.1/css/all.css')
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css')
    script(src='https://code.jquery.com/jquery-3.6.0.min.js')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js')
    block scripts
  body
    header
      nav.navbar.navbar-expand-lg.navbar-dark.bg-primary
          a.navbar-brand(href='#', style='padding-left: 20px;') FCEMS - Run Number Log
          button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
            span.navbar-toggler-icon
          #navbarNav.collapse.navbar-collapse.navbar-nav.justify-content-center
            ul.navbar-nav.ml-auto
              li.nav-item
                a.nav-link(href='/list') Home
              li.nav-item
                a.nav-link(href='/statistics') Stats

    .container-fluid
      block content

    footer
      .container
        p.text-center.text-muted
          a.footer-link(href='https://millercybertech.com', target='_blank') &copy; #{new Date().getFullYear()} Miller Cyber Technologies LLC